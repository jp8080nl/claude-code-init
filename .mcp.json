{
    "globalShortcut": "Ctrl+Space",
    "mcpServers": {
        "puppeteer": {
            "command": "docker",
            "args": [
                "run",
                "-i",
                "--rm",
                "--init",
                "-e",
                "DOCKER_CONTAINER=true",
                "mcp/puppeteer"
            ]
        },
        "postgres": {
            "command": "docker",
            "args": [
                "run",
                "-i",
                "--rm",
                "-e",
                "POSTGRES_URL=postgresql://postgres:postgres@host.docker.internal:5432/shopify_content",
                "mcp/postgres",
                "postgresql://postgres:postgres@host.docker.internal:5432/shopify_content"
            ],
            "env": {
                "POSTGRES_URL": "postgresql://postgres:postgres@host.docker.internal:5432/shopify_content"
            }
        }
    }
}